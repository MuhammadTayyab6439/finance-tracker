<div class="display-card">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header display-card">
    <%= @friends.each do |friend| %>
   
    <strong>Name: </strong> <%= friend.fullname %>
    <strong>Email: </strong> <%= friend.email %>
     <%= link_to "View profile", "#", class: "btn btn-sm btn-success" %>
            <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: friend),
                              class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge badge-secondar">
                  You are friends
                </span>
              <% end %>
     <% end %>                           
  </div>
<% end %>