<table class="table table-bordered table-hover">
<thead>

  <tr>
    <th scope="col">ticker</th>
    <th scope="col">name</th>
    <th scope="col">last_price</th>
    <th scope="col">Actions</th>
  </tr>
</thead>
<tbody>
  <tr>
  <% @stocks_user.each do |stock| %>
    <th scope="row"><%= stock.ticker %></th>
    <td><%= stock.name %></td>
    <td><%= stock.last_price %></td>

    <td> <% if current_user.id==@user.id %><%= link_to "Remove",user_stock_path(stock),class:"btn btn-warning",method: :delete, 
    data:{confirm:"are u sure"} %>
    <%else%>
        <div class="div badge badge-secondary">

    	<em>u can only view other stocks</em>
        </div>
    <% end %>
    </td>

  </tr>
  <% end %>
</tbody>
</table>